<Window x:Class="Orbbec.PointCloudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orbbec"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Closing="Control_Closing"
        Title="PointCloud" Height="700" Width="1200" x:Name="control">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button x:Name="pointcloudButton" Width="160" Height="30" Grid.Row="0" Content="Save Depth Points" FontSize="14" Margin="0,0,0,10" Click="PointcloudButton_Click"/>
        <Button x:Name="colorPointcloudButton" Width="160" Height="30" Grid.Row="1" Content="Save Color Points" FontSize="14" Margin="0,0,0,10" Click="ColorPointcloudButton_Click"/>
        <TextBlock x:Name="tipsText" Width="320" Grid.Row="2" Text="" FontSize="14" TextWrapping="Wrap"/>
    </Grid>
</Window>
