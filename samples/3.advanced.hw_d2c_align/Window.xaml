<Window x:Class="Orbbec.HWD2CAlignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orbbec"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Closing="Control_Closing"
        Title="HWD2CAlign" Height="700" Width="1200" x:Name="control">
    <Grid>
        <Image x:Name="imgColor" />
        <Image x:Name="imgDepth" Opacity="0.5"/>
        <Button x:Name="btnToggleAlign" Content="Toggle Align Mode" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                Margin="10" Height="40" Width="200" 
                Click="ToggleAlign_Click"/>
    </Grid>
</Window>
